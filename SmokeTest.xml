            <methods>
                <include name="testValidLogin"/>
            </methods>
        </class>
        <class name="Logout.LogoutTests">
            <methods>
                <include name="testLogout"/>
            </methods>
        </class>
        <class name="SignUp.SignUpTests">
            <methods>
                <include name="testValidRegister"/>
            </methods>
        </class>
        <class name="SortAndFilter.SortTests">
            <methods>
                <include name="testSortHighToLow"/>
            </methods>
        </class>
        <class name="Cart.CartTests">
            <methods>
                <include name="testAddItemToCart"/>
                <include name="testAddValidPromoCode"/>
