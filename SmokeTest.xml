            </methods>
        </class>
        <class name="EditProfile.EditProfileTests">
            <methods>
                <include name="testEditFirstName"/>
            </methods>
        </class>
        <class name="Settings.SettingsTests">
            <methods>
                <include name="testChangeCountry"/>
            </methods>
        </class>
        <class name="Category.CategoryTests">
